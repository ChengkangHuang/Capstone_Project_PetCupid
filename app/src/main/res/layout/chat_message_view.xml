<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="message_send"
            type="ca.mohawkcollege.petcupid.chatmsg.ChatMessage" />
        <variable
            name="message_receive"
            type="ca.mohawkcollege.petcupid.chatmsg.ChatMessage" />
    </data>

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/userLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_avatar_user"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/user_avatar" />

                <TextView
                    android:id="@+id/txv_msg_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@id/img_avatar_user"
                    android:background="@mipmap/my_bubble_user_4"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="10dp"
                    android:text="@{message_send.message}"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@id/img_avatar_user"
                    android:background="@mipmap/my_bubble_user_4"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txv_time_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txv_msg_user"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@id/txv_msg_user"
                    android:text="@{message_send.timestampToString()}"
                    android:textColor="@color/chat_lst_msg_time" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sysLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_avatar_other"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/sys_avatar" />

                    <TextView
                        android:id="@+id/txv_msg_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/img_avatar_other"
                        android:background="@mipmap/my_bubble_system_4"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="10dp"
                        android:text="@{message_receive.message}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/img_avatar_other"
                        android:background="@mipmap/my_bubble_system_4"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="10dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/txv_msg_other"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/txv_msg_other"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_time_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="right"
                            android:text="@{message_receive.timestampToString()}"
                            android:textColor="@color/chat_lst_msg_time" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>